// File: ThreadPriority.java
public class ThreadPriority {
    public static void main(String[] args) {
        MyThread1 m1 = new MyThread1("MyThread1");
        MyThread2 m2 = new MyThread2("MyThread2");
    }
}

class MyThread1 extends Thread {
    MyThread1(String name) {
        super(name);
        start(); // start the thread immediately
    }

    public void run() {
        Thread cur = Thread.currentThread();
        cur.setPriority(Thread.MAX_PRIORITY); // set MAX_PRIORITY
        for (int i = 0; i < 5; i++) {
            System.out.println("Thread Name: " + cur.getName());
            System.out.println("Thread Priority: " + cur.getPriority());
          
        }
    }
}

class MyThread2 extends Thread {
    MyThread2(String name) {
        super(name);
        start();
    }

    public void run() {
        Thread cur = Thread.currentThread();
        cur.setPriority(Thread.MIN_PRIORITY); // set MIN_PRIORITY
        for (int i = 0; i < 5; i++) {
            System.out.println("Thread Name: " + cur.getName());
            System.out.println("Thread Priority: " + cur.getPriority());
            
        }
    }
}
